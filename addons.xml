<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.geekfromgreece" name="GeekFromGreece Repo" version="1.0.0" provider-name="geekfromgreece">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="GeekFromGreece Repository">
    <!--  -->
    <info compressed="false">https://raw.githubusercontent.com/geekfromgreece/tv-project-by-geekfromgreece/main/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/geekfromgreece/tv-project-by-geekfromgreece/main/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/geekfromgreece/tv-project-by-geekfromgreece/main/zips/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>GeekFromGreece Kodi repository</summary>
    <description>Repository for GeekFromGreece Kodi add-ons.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
<addon id="plugin.video.geekfromgreece" name="GeekFromGreece Live TV" version="1.0.0" provider-name="geekfromgreece">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Greek & Russian Live TV (curated)</summary>
    <description>GeekFromGreece Live TV add-on skeleton (Greek / Russian categories).</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
</addons>
